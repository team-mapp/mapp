<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    //for splash
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">//위의 엑션바(툴바)삭
        <item name="android:windowBackground">@drawable/splash</item>
    </style>



</resources>
