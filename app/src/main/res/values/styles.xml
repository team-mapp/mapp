<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="appBarLayoutStyle">@style/AppBarLayout.Default</item>
        <item name="toolbarStyle">@style/Toolbar.Default</item>
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="appBarLayoutStyle">@style/AppBarLayout.Default</item>
        <item name="toolbarStyle">@style/Toolbar.Default</item>
    </style>

    <style name="Theme.App.Review" parent="Theme.App.NoActionBar">
        <item name="colorControlActivated">@color/star_color</item>
    </style>

    <style name="AppBarLayout.Default" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.Default" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Header" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/keyline_small</item>
    </style>

    <style name="TextAppearance.Overline" parent="@style/TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_overline_height</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.OverlineContent" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_overline_content_height</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:indeterminateDrawable" tools:ignore="PrivateResource">
            @drawable/abc_ratingbar_indicator_material
        </item>
        <item name="android:maxHeight">@dimen/rating_bar_height</item>
        <item name="android:minHeight">@dimen/rating_bar_height</item>
        <item name="android:numStars">5</item>
        <item name="android:progressDrawable" tools:ignore="PrivateResource">
            @drawable/abc_ratingbar_indicator_material
        </item>
        <item name="android:stepSize">1</item>
        <item name="colorControlActivated">@color/star_color</item>
    </style>

    <!-- for splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar"> <!-- 위의 엑션바(툴바)삭 -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
